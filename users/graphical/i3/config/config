client.unfocused        #232323 #232323 #D3D3D3 #232323   #232323
client.urgent           #232323 #ED7179 #FFFAF1 #ED7179   #ED7179
client.placeholder      #111111 #161616 #FFFAF1 #111111   #161616 

client.background       #FFFAF1


